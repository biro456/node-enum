{
	"testRunner": "jest-circus/runner",
	"testEnvironment": "node",
	"roots": [
		"src/"
	],
	"testRegex": ".+\\.spec\\.ts$",
	"transform": {
		"^.+\\.ts$": "ts-jest"
	},
	"injectGlobals": false,
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.ts",
		"!src/**/*.spec.ts"
	],
	"coverageReporters": [
		"text-summary"
	]
}
