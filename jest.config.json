{
	"testRunner": "jest-circus/runner",
	"testEnvironment": "node",
	"roots": [
		"test/"
	],
	"testRegex": ".+\\.spec\\.ts$",
	"extensionsToTreatAsEsm": [
		".ts"
	],
	"moduleNameMapper": {
	  "^(\\.{1,2}/.*)\\.js$": "$1"
	},
	"transform": {
		"^.+\\.[jt]s$": "ts-jest"
	},
	"injectGlobals": false,
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.ts"
	],
	"coverageReporters": [
		"text-summary"
	]
}
