{
	"testRunner": "jest-circus/runner",
	"testEnvironment": "node",
	"roots": [
		"test/"
	],
	"testRegex": ".+\\.spec\\.ts$",
	"extensionsToTreatAsEsm": [
		".ts"
	],
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	},
	"transform": {
		"^.+\\.[jt]s$": "ts-jest"
	},
	"injectGlobals": false,
	"reporters": [
		"default",
		[
			"jest-junit",
			{
				"outputDirectory": "test-results/junit",
				"outputName": "jest.xml",
				"classNameTemplate": "{classname}",
				"titleTemplate": "{title}",
				"ancestorSeparator": " ",
				"usePathForSuiteName": "true"
			}
		]
	],
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.ts"
	],
	"coverageReporters": [
		"text-summary"
	]
}
