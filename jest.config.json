{
	"testRunner": "jest-circus/runner",
	"testEnvironment": "node",
	"roots": [
		"src/"
	],
	"testRegex": ".+\\.spec\\.ts$",
	"transform": {
		"^.+\\.ts$": "ts-jest"
	},
	"injectGlobals": false,
	"reporters": [
		"default",
		[
			"jest-junit",
			{
				"outputDirectory": "test-results/",
				"outputName": "jest.xml"
			}
		]
	],
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.ts",
		"!src/**/*.spec.ts"
	],
	"coverageDirectory": "coverage/",
	"coverageReporters": [
		"text-summary",
		"lcov"
	]
}
