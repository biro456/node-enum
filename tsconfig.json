{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2015",
		"lib": [
			"ES2015"
		],

		"types": [],

		"noEmit": true,

		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,

		"declaration": true,
		"sourceMap": true,

		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/"
	],
	"exclude": [
		"build/",
		"node_modules/"
	]
}
