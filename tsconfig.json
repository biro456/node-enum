{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ES2015",
		"lib": [
			"ES2017"
		],

		"noEmit": true,

		"moduleResolution": "Node",

		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"declaration": true,
		"sourceMap": true,
	},
	"include": [
		"src/"
	],
	"exclude": [
		"build/",
		"dist/",
		"node_modules/"
	]
}
