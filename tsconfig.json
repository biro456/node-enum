{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": [
			"ES2022"
		],

		"esModuleInterop": true,
		"moduleResolution": "Node16",

		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"declaration": true,
		"sourceMap": true,
	},
	"include": [
		"src/",
		"test/"
	],
	"exclude": [
		"build/",
		"node_modules/"
	]
}
